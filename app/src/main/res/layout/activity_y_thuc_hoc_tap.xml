<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YThucHocTap">
    <View
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@color/primary"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/ic_wave"
        app:layout_constraintTop_toTopOf="@+id/bottom"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ý thức học tập"
        android:textAllCaps="true"
        android:textColor="@color/cardview_light_background"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067" />
    <EditText
        android:inputType="number"
        android:id="@+id/hoctap"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/corner_borer"
        android:drawableStart="@drawable/ic_code"
        android:gravity="center"
        android:hint="Ý thức và thái độ học tập(max 6)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />
    <EditText
        android:inputType="number"
        android:id="@+id/hoatdong"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/corner_borer"
        android:drawableStart="@drawable/ic_code"
        android:gravity="center"
        android:hint="Ý thức và thái độ hoạt động(max 2)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />
    <EditText
        android:inputType="number"
        android:id="@+id/cuocthi"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/corner_borer"
        android:drawableStart="@drawable/ic_code"
        android:gravity="center"
        android:hint="Ý thức và thái độ kì thi(max 2)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />
    <EditText
        android:inputType="number"
        android:id="@+id/vuotkho"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/corner_borer"
        android:drawableStart="@drawable/ic_code"
        android:gravity="center"
        android:hint="Tinh thần vượt khó(max 2)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />
    <EditText
        android:inputType="number"
        android:id="@+id/ketqua"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/corner_borer"
        android:drawableStart="@drawable/ic_code"
        android:gravity="center"
        android:hint="Kết quả học tập(max 6)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />
    <Button
        android:id="@+id/button_goto"
        android:drawableStart="@drawable/ic_arrow_forward"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:background="@drawable/corner_borer"
        android:backgroundTint="@color/primary"
        android:text="Trang tiếp theo"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />
</androidx.constraintlayout.widget.ConstraintLayout>